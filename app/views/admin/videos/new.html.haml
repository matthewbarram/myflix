%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for(@video, url: admin_videos_path, html: { :multipart => true, class: "form-horizontal" }) do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              .col-sm-3
                = f.text_field :title, class: "col-sm-3"
            .form-group
              .col-sm-3
                = f.select :category_id, options_for_select(Category.all.map { |e| [e.title, e.id]}), class: "col-sm-3"
            .form-group
              .col-sm-6
                = f.text_area :description
            .form-group
              .col-sm-6
                = f.file_field :large_image
            .form-group
              .col-sm-6
                = f.file_field :small_image

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit("Add New Video")
