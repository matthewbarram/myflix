%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      / = render 'shared/errors', obj: @user
      = bootstrap_form_for(@user, url: register_path) do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email
          = f.text_field :fullname, label: "Full Name"
          = f.password_field :password
          %script.stripe-button{"data-amount" => "999", "data-description" => "Subscription ($9.99)", "data-key" => "pk_test_XdqENVHTZ1Oae1eWjxnoQdWB", "data-name" => "Demo Site", src: "https://checkout.stripe.com/checkout.js"}
          - if @invitation
            = hidden_field_tag 'invite_token', @invitation.invite_token
